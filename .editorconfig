# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{md,markdown}]
max_line_length = off
trim_trailing_whitespace = false

[*.{yml,yaml,json}]
indent_size = 2

[*.{html,css,js}]
indent_size = 2
