@page
@model Task04.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Вход в систему";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2>Вход в систему</h2>
        
        <form method="post">
            <div class="form-group mb-3">
                <label for="username" class="form-label">Имя пользователя:</label>
                <input type="text" id="username" name="Username" class="form-control" value="admin" />
            </div>
            
            <div class="form-group mb-3">
                <label for="password" class="form-label">Пароль:</label>
                <input type="password" id="password" name="Password" class="form-control" value="password" />
            </div>
            
            <button type="submit" class="btn btn-primary">Войти</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info mt-3">@Model.Message</div>
        }
    </div>
</div>
